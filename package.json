{
	"name": "myextension",
	"displayName": "MyExtension",
	"description": "My VS Code extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": ""
	},
	"activationEvents": [
		"onCommand:myextension.sayhello",
		"onCommand:myextension.askquestion",
		"onView:myextension-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "myextension-sidebar-view",
					"title": "My Extension",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"myextension-sidebar-view": [
				{
					"type": "webview",
					"id": "myextension-sidebar",
					"name": "MyExtension",
					"icon": "media/icon.svg",
					"contextualTitle": "MyExtension"
				}
			]
		},
		"commands": [
			{
				"command": "myextension.sayhello",
				"category": "MyExtension",
				"title": "Say hello"
			},
			{
				"command": "myextension.askquestion",
				"category": "MyExtension",
				"title": "Ask question"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.5.0",
		"@tsconfig/svelte": "^2.0.1",
		"@types/vscode": "^1.73.0",
		"@vscode/test-web": "^0.0.22",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^8.2.3",
		"@types/node": "~14.18.63",
		"@types/polka": "^0.5.7",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"concurrently": "^6.5.1",
		"eslint": "^7.32.0",
		"glob": "^7.2.3",
		"mocha": "^8.4.0",
		"rollup": "^2.79.1",
		"rollup-plugin-svelte": "^7.1.6",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.59.2",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^4.10.7",
		"ts-loader": "^9.5.1",
		"typescript": "^4.9.5",
		"webpack": "^5.89.0",
		"webpack-cli": "^4.10.0"
	}
}